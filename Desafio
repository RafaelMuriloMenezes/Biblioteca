class Livro {
    private String titulo; //importante deixar o private pois n√£o deve ter altera√ß√£o
    private String autor;
    private int anoPublicacao;
    private String estado;

    public Livro(String titulo, String autor, int anoPublicacao, String estado) {
        this.titulo = titulo;
        this.autor = autor;
        this.anoPublicacao = anoPublicacao
        this.estado = estado;
    }

    //Fazendo o Getters e Setters

    public String getTitulo() {
        return titulo;
    }

    public String getAutor() {
        return autor;
    }

    public String getEstado() {
        return estado;
    }

    public void setEstado(String estado) {
        this.estado = estado;
    }
} //Criamos a entidade "livros" como uma classe e fizemos a constru√ß√£o e getters e setters ‚úÖ

//Criando a entidade "usu√°rio" como uma classe, fazer o construtor e getters e settersüü®

class Usuario {
    private String nome;
    private int identificacao;
    private List<Livro> livrosEmprestados; //aqui se faz necess√°rio a importa√ß√£o de uma lista de livros para conseguirmos realizar a leitura;

    //iniciando aa constru√ß√£o:
    public Usuario(String nome, int identificacao) {
        this.nome = nome;
        this.identificacao = identificacao;
        this.livrosEmprestados = new Arraylist<>(); //precisarei olhar com mais calma este ponto;
    }

    //m√©todo necess√°rio para emprestar e devolver livros, b√°sicamente adicionamos livro em um lista ou removemos:

    public void emprestarLivro (livro livro) {
            livrosEmprestados.add(livro);
    }

    public void devolverLivro(Livro livro) {
        livrosEmprestados.remove(livro);
    }
}

class Funcionario {
    public void adicionarLivro (Livro livro, List <Livro> acervo) {
    acervo.add(livro);
}
    public void removerLivro (Livro livro, List <livro> acervo) {
        acervo.remove(livro);
    }
    public void cadastrarUsuario (Usuario usuario, List <Usuario> usuarios) {
        usuarios.add (usuario);
    }
}

//Classe principal para testar funcionamento:

